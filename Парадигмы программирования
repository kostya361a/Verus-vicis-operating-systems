import ctypes

# Загрузка драйвера (предположим, что у нас есть библиотека с драйвером driver.dll)
driver = ctypes.CDLL('driver.dll')

# Определение функции из драйвера (например, функции, которая читает данные с устройства)
read_data = driver.read_data
read_data.restype = ctypes.c_int  # Указываем тип возвращаемого значения

# Инициализация драйвера (может требоваться для некоторых драйверов)
driver.init()

# Вызов функции из драйвера для чтения данных
data = read_data()

# Обработка полученных данных
print(f"Read data from device: {data}")

# Освобождение ресурсов и завершение работы с драйвером
driver.close()
